{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Angband (Win32)",
            "type": "shell",
            "command": "C:/msys64/mingw32.exe",
            "args": [
                "-c",
                "cd /c/GAMES/Angband/angband/src && make -f Makefile.win MINGW=yes"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Clean Angband",
            "type": "shell",
            "command": "C:/msys64/mingw32.exe",
            "args": [
                "-c",
                "cd /c/GAMES/Angband/angband/src && make -f Makefile.win clean"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "echo": true
            }
        }
    ]
}