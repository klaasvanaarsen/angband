{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Angband (Win32)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/angband.exe",
            "args": [
                "lib/user/save/Orlare"
            ], // or your test character name
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            // "environment": [
            //     {
            //         "name": "PATH",
            //         "value": "${workspaceFolder};${env:PATH}"
            //     }
            // ],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw32/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing"
                }
            ],
            "sourceFileMap": {
                "/mnt/c": "C:\\"
            }
        },
        {
            "name": "Attach to Angband (clang64-GDB)",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/game/angband.exe", // path to your executable
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/clang64/bin/gdb.exe"
        }
    ]
}